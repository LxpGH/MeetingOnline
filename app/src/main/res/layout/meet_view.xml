<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/meet_box"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">
    <!--RecycleView子布局根节点需要设置成wrap_content-->


<LinearLayout
        android:id="@+id/left_box"
android:layout_width="0dp"
android:layout_height="match_parent"
android:layout_weight="1"
        android:background="@drawable/box_bg"
android:orientation="vertical">
    <TextView
            android:id="@+id/left_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    <TextView
            android:id="@+id/left_size"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    <TextView
            android:id="@+id/left_limit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

</LinearLayout>
    <RelativeLayout
            android:id="@+id/meet_space"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.05"/>
    <LinearLayout
            android:id="@+id/right_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box_bg"
            android:orientation="vertical">
        <TextView
                android:id="@+id/right_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
        <TextView
                android:id="@+id/right_size"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
        <TextView
                android:id="@+id/right_limit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
</LinearLayout>
</LinearLayout>