<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
    android:id="@+id/member_rl"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:orientation="horizontal">
        <TextView
                android:id="@+id/member_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="成员列表"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/blue"/>
        <Button
                android:id="@+id/refresh_btn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                android:layout_marginEnd="10dp"
                android:text="刷新"
                android:textColor="#fff"
                android:background="@drawable/vote_btn_bg"
                android:textSize="15sp"/>
        <Button
                android:id="@+id/vote_btn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/member_tv"
                android:layout_centerVertical="true"
                android:text="签到"
                android:textColor="#fff"
                android:background="@drawable/vote_btn_bg"
                android:textSize="15sp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/member_below"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/member_rl"
            android:background="@drawable/line"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/member_recv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/member_below"
    android:layout_marginTop="20dp"/>
</RelativeLayout>