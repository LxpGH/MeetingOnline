<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/page_frame"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp">
    <LinearLayout
            android:id="@+id/vote_box"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
        <EditText
        android:id="@+id/vote_theme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/vote_box_bg"
        android:hint="输入投票主题(3-50字)"
        android:gravity="start"
        android:padding="10dp"
        android:textCursorDrawable="@drawable/ic_line"/>
        <TextView
        android:id="@+id/vote_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/start_red"
        android:gravity="start"
        android:textSize="15sp"
        android:padding="10dp"/>
        <Button
        android:id="@+id/vote_release"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/login_btn_bg"
        android:text="发起投票"
        android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/record_box"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="vertical">
        <EditText
                android:id="@+id/record_theme"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginBottom="30dp"
                android:background="@drawable/vote_box_bg"
                android:hint="输入会议记录(10-200字)"
                android:padding="10dp"
                android:gravity="start"/>
        <Button
                android:id="@+id/record_release"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/login_btn_bg"
                android:text="提交记录"
                android:textColor="@color/white"/>

    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
    android:id="@+id/buttons_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/page_frame">
    <Button
            android:id="@+id/vote_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="投票"
            android:textColor="@color/white"
            android:background="@drawable/host_btn_selected"/>
    <Button
            android:id="@+id/record_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/vote_create"
            android:text="会议记录"
            android:textColor="@color/white"
            android:background="@drawable/host_btn_bg"/>
    <Button
            android:id="@+id/end_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="会议结束"
            android:textColor="@color/white"
            android:background="@drawable/host_btn_bg"/>
    </LinearLayout>
</RelativeLayout>